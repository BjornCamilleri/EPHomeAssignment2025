@model Domain.Models.Poll

@{
    ViewData["Title"] = "Create Poll";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle me-2"></i> Create New Poll</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreatePoll">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter poll title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Option1Text" class="form-label fw-bold"></label>
                            <input asp-for="Option1Text" class="form-control" placeholder="First option" />
                            <span asp-validation-for="Option1Text" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Option2Text" class="form-label fw-bold"></label>
                            <input asp-for="Option2Text" class="form-control" placeholder="Second option" />
                            <span asp-validation-for="Option2Text" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Option3Text" class="form-label fw-bold"></label>
                            <input asp-for="Option3Text" class="form-control" placeholder="Third option" />
                            <span asp-validation-for="Option3Text" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle me-1"></i> Create Poll
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
